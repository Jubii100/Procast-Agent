# Procast AI Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# Admin connection (for setup/migrations)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/procast

# Read-only connection (for AI agent - RECOMMENDED)
DATABASE_URL_READONLY=postgresql://procast_analyst:analyst_readonly@localhost:5432/procast

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# LLM Configuration
# =============================================================================

# Anthropic API Key (required for Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model configuration
LLM_MODEL=claude-3-5-sonnet-20241022
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.0

# =============================================================================
# API Configuration
# =============================================================================

# FastAPI settings
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# Authentication (Pre-JWT - Local Development)
# =============================================================================

# Mock user for local testing
MOCK_USER_ID=test-user-123
MOCK_USER_EMAIL=test@procast.local

# =============================================================================
# Observability
# =============================================================================

# LangSmith (optional - for tracing)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=procast-ai

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Agent Configuration
# =============================================================================

# Query limits
MAX_QUERY_RESULTS=1000
QUERY_TIMEOUT_SECONDS=30

# Retry settings
MAX_RETRIES=3
RETRY_DELAY_SECONDS=1

# Confidence thresholds
MIN_CONFIDENCE_THRESHOLD=0.7
